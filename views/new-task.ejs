<body>

<!-- Wrapper -->
<div id="wrapper">

    <!-- Header -->
    <% include ./header %>
    <!-- Menu -->



    <!-- Main -->

    <section class="new_task">
        <div>

            <h2>發布任務1</h2>
            <form action="/new-task" method="post" >

                <table width="200" border="1">
                    <tbody>


                    <tr>
                        <td>任務名稱：<input name="title" type="text" id="title" ></td>
                        <td>任務類別：<select id="category" name="category">
                                <option value="purchase">代購</option>
                                　								<option value="deliver">遞送貨物</option>
                                <option value="transportation">交通運輸</option>
                                <option value="others">其他</option>

                            </select></td>
                    </tr>
                    <tr>
                        <td>等級限制：<select id="limited＿level" name="limited_level">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>

                            </select>
                        </td>
                        <td>到期時間：<input id="due_time" type="datetime-local" name="due_time" placeholder=" "/>
                        </td>
                    </tr>
                    <tr>
                        <td>任務內容：<textarea  id="content" name="content" class="text" cols="40" rows ="20"></textarea>
                        <td><input type="hidden"  id="status"  name="status" value="available"></td>
                    </tr>
                    </tbody>
                </table>


                <input type="submit" id="tSubmit" name="tSubmit">


            </form>

        </div>
    </section>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <ul class="icons">
                <li><a href="#" class="icon alt fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon alt fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon alt fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon alt fa-github"><span class="label">GitHub</span></a></li>
                <li><a href="#" class="icon alt fa-linkedin"><span class="label">LinkedIn</span></a></li>
            </ul>

        </div>
    </footer>

</div>

